{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "customer", "amount", "date", "status"],
  "properties": {
    "id": {
      "type": "string"
    },
    "customer": {
      "type": "string"
    },
    "amount": {
      "type": "number",
      "format": "double"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": ["NEW", "PENDING", "PAID"]
    }
  }
}